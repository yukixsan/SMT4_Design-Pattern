{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build PacmanGame",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "src/*.cpp",
                "-I",
                "include",
                "-o",
                "PacmanGame.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
"problemMatcher": ["$gcc"],
"detail": "compiler: g++"
        },
        {
            "label": "Run PacmanGame",
            "type": "shell",
            "command": "./PacmanGame.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
